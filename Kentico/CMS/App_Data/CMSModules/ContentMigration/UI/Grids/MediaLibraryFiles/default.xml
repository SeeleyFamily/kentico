<?xml version="1.0" encoding="utf-8" ?>
<grid>
	<actions>
		<action name="edit" caption="$General.Edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
		<action name="#delete" caption="$General.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$General.ConfirmDelete$" />
	</actions>
	<columns>
		<column source="FileName" caption="FileName" wrap="false" localize="true">
			<filter type="text" size="1000" source ="FileName" />
		</column>
		<column source="FilePath" caption="FilePath" wrap="false" localize="true">
			<filter type="text" size="1000"  source ="FilePath" />
		</column>
		<column source="FileFullPath" caption="FileFullPath" wrap="false" localize="true">
			<filter type="text" size="1000"  source ="FileFullPath" />
		</column>
	</columns>
	<options>
		<key name="DisplayFilter" value="true" />
		<key name="FilterLimit" value="0" />
	</options>
</grid>