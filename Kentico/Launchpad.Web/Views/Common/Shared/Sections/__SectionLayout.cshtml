@*
    Built with Common Launchpad 2.0.2
*@

@model Launchpad.Web.Models.Custom.Sections.SectionProperties

@{
    string sectionClasses = Context.Kentico().PageBuilder().EditMode ? @Model.SectionClass() : @Model.SectionClass() + Model.SectionScreenDisplay;
}

<section @if (!string.IsNullOrWhiteSpace(Model.Id)) { <text> id="@Model.Id" </text> } class="@sectionClasses">
    <div class="@Model.ContainerClass()">
        <div class="@(Model.UseRow ? " row" : "" )">
            @foreach (string areaclass in Model.AreaClasses)
            {
                <div class="@areaclass">
                    @Html.Kentico().WidgetZone()
                </div>
            }
        </div>
    </div>
</section>

