@*
	Built with Common Launchpad 2.0.2
*@

@model Launchpad.Web.Models.Common.ViewModels.SitemapViewModel

<div class="container">
	<div class="row">
		<div class="sitemap col-12 col-md-8">
			<h1>@Model.Headline</h1>
			<div class="sitemap-list">
				@foreach (var menuColumn in Model.Menu)
				{
					if (menuColumn.IsColumn && menuColumn.HasChildren)
					{
						<ul class="sitemap-column col-lg-@(12/Model.Menu.Count())">
							@foreach (var menuItem in menuColumn.Children)
							{
								if (!menuItem.IsCard && !menuItem.IsColumn)
								{
									<li class="sitemap-item">
										<a href="@menuItem.Url">@menuItem.Label</a>
										@if (menuItem.HasChildren)
										{
											<ul class="sitemap-sub-list">
												@foreach (var childMenuItem in menuItem.Children)
												{
													if (!childMenuItem.IsCard && !childMenuItem.IsColumn)
													{
														<li class="sitemap-sub-item"><a href="@childMenuItem.Url">@childMenuItem.Label</a></li>
													}
												}
											</ul>
										}
									</li>
								}
							}
						</ul>
					}
				}
			</div>
		</div>
	</div>
</div>